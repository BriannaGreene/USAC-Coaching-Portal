<h1 class="container">Coach Profile</h1>

<form class="container" id="editUserForm" novalidate>
  <h3>Login Information</h3>
  <div class="row">
    <div class="col-md-5 mb-3">
      <label for="validationCustom02">Email</label>
      <input id="coach-dash-email" type="text" name="username" class="form-control" placeholder="email" required>
    </div>
    <div class="col-md-5 mb-3">
      <label for="validationCustom02">Password</label>
      <input id="coach-dash-password" type="password" name="password" class="form-control" placeholder="password" required>
    </div>
  </div>
  <h3>General Information</h3>
  <div class="row">
    <div class="col-md-5 mb-3">
      <label for="validationCustom01">First name</label>
      <input id="coach-dash-firstname" type="text" name="first_name" class="form-control" placeholder="First name" required>
    </div>
    <div class="col-md-5 mb-3">
      <label for="validationCustom02">Last name</label>
      <input id="coach-dash-lastname" type="text" name="last_name" class="form-control" placeholder="Last name" required>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-5 mb-3">
      <label for="validationCustom03">Team name</label>
      <input id="coach-dash-teamname" type="text" name="team_name" class="form-control" placeholder="Team Name" required>
    </div>
    <div class="col-md-5 mb-3">
      <label for="validationCustom03">USAC Membership Number</label>
      <input id="coach-dash-usacmem" type="text" name="usac_membership" class="form-control" placeholder="USAC Membership Number" required>
    </div>
  </div>
  <h3>Required Document Uploads</h3>
  <div class="row">
    <div class="col-md-5 mb-3, form-group">
      <label for="exampleInputFile">CPR Certification and Expiration Date</label>
      <input type="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">
      <small id="fileHelp" class="form-text text-muted">Please upload the proper documentation and input the expiration date of your certification.</small>
      <input type="text" name="cpr_exp_date" class="form-control" id="coach-dash-cprExpDate" placeholder="mm/dd/yyyy">
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-5 mb-3, form-group">
      <label for="exampleInputFile">First Aid Certification and Expiration Date</label>
      <input type="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">
      <small id="fileHelp" class="form-text text-muted">Please upload the proper documentation and input the expiration date of your certification.</small>
      <input type="text" name="fa_exp_date" class="form-control" id="coach-dash-faExpDate" placeholder="mm/dd/yyyy">
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-5 mb-3, form-group">
      <label for="exampleInputFile">Safe Sport Certification and Expiration Date</label>
      <input type="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">
      <small id="fileHelp" class="form-text text-muted">Please upload the proper documentation and input the expiration date of your certification.</small>
      <input type="text" name="ss_exp_date" class="form-control" id="ssExpDate" placeholder="mm/dd/yyyy">
    </div>
  </div>
  <button id="coach-dash-update-button" class="btn btn-primary" type="submit">Update</button>
</form>


<div class="card text-center container" style="width: 20rem;">
  <div class="card-block">
    <h4 class="card-title">Current Status</h4>
    <p class="card-text" id="coach-dash-is_certified"></p>
  </div>
</div>
